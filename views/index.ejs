          </div>
          <div class="col-lg-4">
            <div class="featurette-item">
              <img class="featurette-icon" src="images/2.jpg" alt="Icon 2" />
              <h2 class="featurette-heading">Your Kind of Travel Planning</h2>
              <p class="lead">
                Sign up to receive our latest benefits, updates and great rates
                delivered to your inbox.
              </p>
              <a class="btn btn-secondary" href="#">Sign Up</a>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="featurette-item">
              <img class="featurette-icon" src="images/3.jpg" alt="Icon 3" />
              <h2 class="featurette-heading">Hokie PlusÂ® Program</h2>
              <p class="lead">
                You could be earning points toward free rentals. What are you
                waiting for?
              </p>
              <a class="btn btn-secondary" href="#">Join Now</a>
            </div>
          </div>
        </div>

        <hr class="featurette-divider" />

        <div class="row">
          <!-- Dynamically insert vehicle items here -->
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const locationInput = document.getElementById("locationInput");
        const suggestionsContainer = document.getElementById(
          "locationSuggestions"
        );
        const selectedLocationDisplay = document.getElementById(
          "selectedLocationDisplay"
        );
        const selectedLocationName = document.getElementById(
          "selectedLocationName"
        );
        const editLocationBtn = document.getElementById("editLocationBtn");
        const pickupGroup = document.getElementById("pickupGroup");

        locationInput.addEventListener("input", function () {
          const inputVal = this.value;
          if (inputVal.length > 1) {
            // Fetch suggestions if input length is more than 1 character
            fetchSuggestions(inputVal);
          } else {
            suggestionsContainer.innerHTML = "";
          }
        });

        function fetchSuggestions(input) {
          // Replace with the actual API endpoint
          fetch(`/locations?q=${encodeURIComponent(input)}`)
            .then((response) => response.json())
            .then((locations) => {
              displaySuggestions(locations);
            })
            .catch((error) =>
              console.error("Error fetching location suggestions:", error)
            );
        }

        function displaySuggestions(locations) {
          suggestionsContainer.innerHTML = "";
          if (locations.length) {
            locations.forEach((location) => {
              const div = document.createElement("div");
              div.textContent = location.city; // Adjust according to your actual property name
              div.style.padding = "10px";
              div.style.cursor = "pointer";
              div.addEventListener("click", function () {
                locationInput.value = this.textContent;
                suggestionsContainer.innerHTML = ""; // Clear suggestions after selection
                locationInput.value = "";
                locationInput.style.display = "none"; // Hide input field
                selectedLocationName.textContent = this.textContent;
                selectedLocationDisplay.style.display = "block"; // Show selected location and edit option
                suggestionsContainer.innerHTML = ""; // Clear suggestions
                pickupGroup.style.display = "block"; // Show pickup date and time
              });
              suggestionsContainer.appendChild(div);
            });
          } else {
            suggestionsContainer.innerHTML =
              '<div style="padding: 10px;">No matches found</div>';
          }
        }
        // Handler for edit location button
        editLocationBtn.addEventListener("click", function () {
          selectedLocationDisplay.style.display = "none"; // Hide selected location display
          locationInput.style.display = "block"; // Show location input field again
          locationInput.focus(); // Optionally, focus the input field
          pickupGroup.style.display = "none"; // Optionally, hide the pickup group until a location is selected again
        });
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Existing variables
        const locationGroup = document.getElementById("locationGroup");
        const dropoffGroup = document.getElementById("dropoffGroup");
        const submitButton = document.getElementById("submitButton");
        const locationInput = document.getElementById("locationInput");
        const locationLabel = document.getElementById("locationLabel");
        const pickupGroup = document.getElementById("pickupGroup");

        // Modify this part: listen for the 'keydown' event instead of 'blur'
        locationInput.addEventListener("keydown", function (event) {
          // Check if the pressed key is 'Enter'
          if (event.key === "Enter") {
            event.preventDefault(); // Prevent form submission if inside a form
            if (locationInput.value.trim() !== "") {
              // Show pickup and dropoff sections
              pickupGroup.style.display = "block";
              dropoffGroup.style.display = "block";
              submitButton.style.display = "block";

              // Optionally, you might want to move focus to the next input field for a smoother user experience
              document.getElementById("pickupDate").focus();

              // Hide location section
              locationGroup.style.display = "none";
              locationLabel.style.display = "none";
            }
          }
        });
      });
    </script>
  </body>
</html>
