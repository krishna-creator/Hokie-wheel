<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hokie Wheels Rentals</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg header navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Hokie Wheels Rentals</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Sign Up</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero Image with Parallax Effect -->
    <div class="hero-image">
      <div class="hero-text">
        <h1>Welcome to Hokie Wheels Rentals</h1>
        <p>Find the perfect ride for your journey</p>
      </div>
    </div>

    <!-- Search Bar -->
    <div class="container search-field">
      <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
          <h1>Reserve a Vehicle</h1>
          <h4 id="locationLabel">
            Pick-up & Return Location (ZIP, City, or Airport)*
          </h4>
          <form id="reservationForm">
            <div class="form-group" id="locationGroup">
              <input
                type="text"
                class="form-control"
                id="locationInput"
                placeholder="Enter Location"
              />
            </div>
            <div class="form-group" id="pickupGroup" style="display: none">
              <label for="pickupDate">Pick-up Date & Time*</label>
              <input
                type="datetime-local"
                class="form-control"
                id="pickupDate"
              />
            </div>
            <div class="form-group" id="dropoffGroup" style="display: none">
              <label for="dropoffDate">Drop-off Date & Time*</label>
              <input
                type="datetime-local"
                class="form-control"
                id="dropoffDate"
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary"
              id="submitButton"
              style="display: none"
            >
              Search
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="test"></div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Get form elements
        const locationGroup = document.getElementById("locationGroup");
        const pickupGroup = document.getElementById("pickupGroup");
        const dropoffGroup = document.getElementById("dropoffGroup");
        const submitButton = document.getElementById("submitButton");
        const locationInput = document.getElementById("locationInput");
        const locationLabel = document.getElementById("locationLabel");

        // Add event listener to location input (on focus out)
        locationInput.addEventListener("blur", function () {
          if (locationInput.value.trim() !== "") {
            // Show pickup and dropoff sections
            pickupGroup.style.display = "block";
            dropoffGroup.style.display = "block";
            submitButton.style.display = "block";

            // Hide location section
            locationGroup.style.display = "none";
            locationLabel.style.display = "none";
          }
        });
      });
    </script>
  </body>
</html>
