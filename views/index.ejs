    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <!-- Search Bar -->
          <div class="container search-field">
            <div class="row">
              <div class="col-md-6 offset-md-3 text-center">
                <h1>Reserve a Vehicle</h1>
                <h4 id="locationLabel">
                  Pick-up & Return Location (ZIP, City, or Airport)*
                </h4>
                <form id="reservationForm">
                  <div class="form-group" id="locationGroup">
                    <input
                      type="text"
                      class="form-control"
                      id="locationInput"
                      placeholder="Enter Location"
                      autocomplete="off"
                    />
                    <div
                      id="locationSuggestions"
                      class="suggestions-dropdown"
                    ></div>
                  </div>
                  <div id="selectedLocationDisplay" style="display: none">
                    <span id="selectedLocationName"></span>
                    <button id="editLocationBtn">Edit Location</button>
                  </div>
                  <div
                    class="form-group"
                    id="pickupGroup"
                    style="display: none"
                  >
                    <label for="pickupDate">Pick-up Date & Time*</label>
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="pickupDate"
                    />
                  </div>
                  <div
                    class="form-group"
                    id="dropoffGroup"
                    style="display: none"
                  >
                    <label for="dropoffDate">Drop-off Date & Time*</label>
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="dropoffDate"
                    />
                  </div>
                  <button
                    type="submit"
                    class="btn btn-primary"
                    id="submitButton"
                    style="display: none"
                  >
                    Search
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
